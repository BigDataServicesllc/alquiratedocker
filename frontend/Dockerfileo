# Etapa 1: Build
FROM node:18 AS builder
WORKDIR /app
COPY package*.json ./
COPY vite.config.* ./
COPY . .
RUN npm install
RUN npm run build

# Etapa 2: Servir con un servidor est√°tico
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
